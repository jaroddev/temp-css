{% macro product_card(name, color, price) %}

<div class="card shadow round">
    <div class="card-image">
        <img src="../images/produit/{{name}}/{{color}}" alt="{{name}}">
    </div>
    <div class="card-info">
        <div class="name">
            {{name}}
        </div>
        <div class="price">
            {{ price }} â‚¬
        </div>
    </div>
    <div class="actions ">
        <a class="blue button">
            Voir
        </a>
    </div>
</div>

{% endmacro %}

{% macro menu(title, filters) %}

<ul class="filters">
    <h3 class="filter-title">
        &mdash; {{ title |upper }}
    </h3>

    {% for sort in filters %}
        <li class="filter">
            {{ sort |capitalize }}
        </li>
    {% endfor %}

</ul>

{% endmacro %}